<div data-role="header">
  <h1>Market</h1>
  <%= link_to 'Sell/Buy a new item', new_item_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>

<div data-role="content">
  <ul data-role="listview">
    <% @items.each do |item| %>
    <li>
      <%= item.name %>
      <%= link_to '', item_path(item), "data-icon" => "gear" %>
    </li>
    <% end %>
  </ul>
</div>
