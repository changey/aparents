<div data-role="content" data-inset="true">
	<%= form_for(@item) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<p>Price (USD)</p>
	<%= f.text_field :price %>
	<%= f.text_field :latitude, :id => "lat" %>
	<%= f.text_field :longitude, :id => "lng" %>
	<%= f.hidden_field :address, :value=>"a" %>
	
	<%= f.submit "Create", "data-role" => "button", "data-inline" => "true", "data-theme" => "b" %>
	<% end %>

</div>
<div id="container"></div>

