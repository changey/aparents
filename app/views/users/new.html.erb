<!-- start content -->
<div data-role="content" data-inset="true">
	<%= form_for(@user) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation %>
	<%= f.submit "Sign Up", "data-role" => "button", "data-inline" => "true", "data-theme" => "b" %>
	<% end %>

</div>
<!-- end content -->